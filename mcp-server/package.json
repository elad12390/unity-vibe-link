{
  "name": "vibelink-mcp-server",
  "version": "1.0.0-alpha.1",
  "description": "MCP Server for VibeLink - Unity Agentic Bridge. Enable AI agents to interact with Unity Editor through the Model Context Protocol.",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "vibelink-mcp": "build/index.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run proto:gen && tsc",
    "proto:gen": "pbjs -t static-module -w es6 -o src/proto/vibelink.js ../proto/vibelink.proto && pbts -o src/proto/vibelink.d.ts src/proto/vibelink.js",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev": "npm run build && node build/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unity": "./run-unity-tests.sh",
    "prepublishOnly": "npm run build && npm run test:unit",
    "test:unit": "jest --testPathIgnorePatterns=integration"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "unity",
    "unity3d",
    "game-development",
    "ai",
    "agent",
    "ai-agent",
    "automation",
    "claude",
    "opencode",
    "cursor"
  ],
  "author": "VibeLink Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elad12390/unity-vibe-link.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/elad12390/unity-vibe-link/issues"
  },
  "homepage": "https://github.com/elad12390/unity-vibe-link#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "protobufjs": "^7.2.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "protobufjs-cli": "^1.1.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
